{
  "performance": {
    "budgets": {
      "global": {
        "firstContentfulPaint": 1800,
        "largestContentfulPaint": 2500,
        "firstInputDelay": 100,
        "cumulativeLayoutShift": 0.1,
        "totalBlockingTime": 300,
        "speedIndex": 3000,
        "timeToInteractive": 3800
      },
      "regional": {
        "us-east-1": {
          "firstContentfulPaint": 1500,
          "largestContentfulPaint": 2000,
          "firstInputDelay": 80,
          "cumulativeLayoutShift": 0.08,
          "totalBlockingTime": 250,
          "speedIndex": 2500,
          "timeToInteractive": 3200
        },
        "eu-central-1": {
          "firstContentfulPaint": 1800,
          "largestContentfulPaint": 2500,
          "firstInputDelay": 100,
          "cumulativeLayoutShift": 0.1,
          "totalBlockingTime": 300,
          "speedIndex": 3000,
          "timeToInteractive": 3800
        },
        "ap-east-1": {
          "firstContentfulPaint": 2000,
          "largestContentfulPaint": 2800,
          "firstInputDelay": 120,
          "cumulativeLayoutShift": 0.12,
          "totalBlockingTime": 350,
          "speedIndex": 3500,
          "timeToInteractive": 4200
        }
      }
    },
    "optimization": {
      "bundleSize": {
        "maxInitialBundle": "250KB",
        "maxChunkSize": "150KB",
        "maxAssetSize": "100KB",
        "treeshaking": true,
        "codeSplitting": true,
        "dynamicImports": true
      },
      "images": {
        "formats": ["webp", "avif", "jpeg"],
        "quality": {
          "webp": 85,
          "avif": 80,
          "jpeg": 85
        },
        "responsive": true,
        "lazyLoading": true,
        "placeholder": "blur",
        "optimization": true
      },
      "fonts": {
        "preload": ["Inter-Regular.woff2", "Inter-Bold.woff2"],
        "display": "swap",
        "subset": true,
        "compression": true
      },
      "caching": {
        "staticAssets": "1y",
        "dynamicContent": "1h",
        "api": "5m",
        "cdn": true,
        "serviceWorker": true
      },
      "compression": {
        "gzip": true,
        "brotli": true,
        "level": 6
      },
      "minification": {
        "html": true,
        "css": true,
        "javascript": true,
        "removeComments": true,
        "removeWhitespace": true
      }
    },
    "monitoring": {
      "realUserMonitoring": true,
      "syntheticMonitoring": true,
      "performanceObserver": true,
      "webVitals": true,
      "customMetrics": [
        "aiResponseTime",
        "localizationLoadTime",
        "complianceCheckTime",
        "userInteractionDelay"
      ]
    },
    "regions": {
      "us-east-1": {
        "cdn": "cloudfront",
        "edgeLocations": ["us-east-1", "us-west-2"],
        "caching": {
          "ttl": 3600,
          "staleWhileRevalidate": 86400
        }
      },
      "eu-central-1": {
        "cdn": "cloudfront",
        "edgeLocations": ["eu-central-1", "eu-west-1"],
        "caching": {
          "ttl": 3600,
          "staleWhileRevalidate": 86400
        }
      },
      "ap-east-1": {
        "cdn": "cloudfront",
        "edgeLocations": ["ap-east-1", "ap-southeast-1"],
        "caching": {
          "ttl": 3600,
          "staleWhileRevalidate": 86400
        }
      }
    },
    "networkOptimization": {
      "http2": true,
      "http3": true,
      "preconnect": [
        "https://fonts.googleapis.com",
        "https://api.taishanglaojun.ai"
      ],
      "prefetch": [
        "/api/user/profile",
        "/api/localization/strings"
      ],
      "preload": [
        "/assets/critical.css",
        "/assets/app.js"
      ],
      "resourceHints": true
    },
    "database": {
      "connectionPooling": {
        "min": 5,
        "max": 20,
        "idle": 10000,
        "acquire": 30000
      },
      "queryOptimization": {
        "indexing": true,
        "caching": true,
        "pagination": true,
        "batchOperations": true
      },
      "readReplicas": true,
      "sharding": {
        "enabled": true,
        "strategy": "region-based"
      }
    },
    "api": {
      "rateLimit": {
        "windowMs": 900000,
        "max": 1000,
        "standardHeaders": true,
        "legacyHeaders": false
      },
      "compression": true,
      "caching": {
        "redis": true,
        "ttl": 300,
        "keyPrefix": "api:"
      },
      "pagination": {
        "defaultLimit": 20,
        "maxLimit": 100
      },
      "batching": true,
      "graphql": {
        "queryComplexity": 1000,
        "queryDepth": 10,
        "introspection": false
      }
    },
    "frontend": {
      "virtualScrolling": true,
      "lazyComponents": true,
      "memoization": true,
      "debouncing": {
        "search": 300,
        "resize": 100,
        "scroll": 16
      },
      "throttling": {
        "api": 1000,
        "events": 100
      },
      "webWorkers": {
        "enabled": true,
        "tasks": ["dataProcessing", "imageOptimization"]
      }
    }
  },
  "alerts": {
    "thresholds": {
      "firstContentfulPaint": 2000,
      "largestContentfulPaint": 3000,
      "firstInputDelay": 150,
      "cumulativeLayoutShift": 0.15,
      "errorRate": 0.01,
      "responseTime": 1000
    },
    "channels": {
      "slack": "#performance-alerts",
      "email": "devops@taishanglaojun.ai",
      "webhook": "https://hooks.slack.com/services/..."
    }
  },
  "testing": {
    "lighthouse": {
      "performance": 90,
      "accessibility": 95,
      "bestPractices": 90,
      "seo": 90,
      "pwa": 80
    },
    "webPageTest": {
      "location": ["Virginia", "Frankfurt", "Singapore"],
      "connection": ["Cable", "3G", "4G"],
      "runs": 3
    },
    "loadTesting": {
      "concurrent": 1000,
      "duration": "10m",
      "rampUp": "2m",
      "scenarios": [
        "normal-load",
        "peak-load",
        "stress-test"
      ]
    }
  }
}