// 应用程序图标
IDI_MAIN_ICON   ICON    "icon.ico"
IDI_TRAY_ICON   ICON    "tray_icon.ico"

// 菜单资源
IDR_MAIN_MENU MENU
BEGIN
    POPUP "文件(&F)"
    BEGIN
        MENUITEM "新建项目(&N)\tCtrl+N",     ID_FILE_NEW
        MENUITEM "打开项目(&O)\tCtrl+O",     ID_FILE_OPEN
        MENUITEM SEPARATOR
        MENUITEM "退出(&X)\tAlt+F4",        ID_FILE_EXIT
    END
    POPUP "工具(&T)"
    BEGIN
        MENUITEM "桌面宠物(&P)",            ID_TOOLS_PET
        MENUITEM "文件传输(&F)",            ID_TOOLS_TRANSFER
        MENUITEM "数据同步(&S)",            ID_TOOLS_SYNC
        MENUITEM SEPARATOR
        MENUITEM "设置(&S)\tCtrl+,",        ID_TOOLS_SETTINGS
    END
    POPUP "帮助(&H)"
    BEGIN
        MENUITEM "关于(&A)",               ID_HELP_ABOUT
    END
END

// 加速键
IDR_MAIN_ACCELERATOR ACCELERATORS
BEGIN
    "N",            ID_FILE_NEW,            VIRTKEY, CONTROL
    "O",            ID_FILE_OPEN,           VIRTKEY, CONTROL
    VK_F4,          ID_FILE_EXIT,           VIRTKEY, ALT
    ",",            ID_TOOLS_SETTINGS,      VIRTKEY, CONTROL
    VK_F1,          ID_HELP_ABOUT,          VIRTKEY
END

// 对话框资源
IDD_ABOUT DIALOGEX 0, 0, 300, 200
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "关于太上老君AI平台"
FONT 9, "Microsoft YaHei UI"
BEGIN
    ICON            IDI_MAIN_ICON, IDC_STATIC, 14, 14, 20, 20
    LTEXT           "太上老君AI平台", IDC_STATIC, 42, 14, 114, 8, SS_NOPREFIX
    LTEXT           "版本 1.0.0", IDC_STATIC, 42, 26, 114, 8
    LTEXT           "Copyright (C) 2024 太上老君AI平台团队", IDC_STATIC, 42, 38, 200, 8
    DEFPUSHBUTTON   "确定", IDOK, 243, 179, 50, 14, WS_GROUP
END

