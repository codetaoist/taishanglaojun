    GROUPBOX        "桌面宠物", IDC_STATIC, 7, 95, 386, 80
    CONTROL         "启用桌面宠物", IDC_CHECK_ENABLE_PET, "Button", BS_AUTOCHECKBOX | WS_TABSTOP, 14, 109, 70, 10
