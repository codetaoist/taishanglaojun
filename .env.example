# 太上老君AI平台环境变量配置文件
# 复制此文件为 .env 并根据实际情况修改配置

# ==================== 基础配置 ====================
# 环境类型: development, staging, production
NODE_ENV=development
LOG_LEVEL=debug

# ==================== 数据库配置 ====================
# PostgreSQL数据库
POSTGRES_PASSWORD=password
DATABASE_URL=postgres://postgres:password@localhost:5432/taishanglaojun?sslmode=disable

# Redis缓存
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# ==================== 安全配置 ====================
# JWT密钥 (生产环境请使用强密码)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# 加密密钥 (32字符)
ENCRYPTION_KEY=your-32-char-encryption-key-here

# ==================== AI服务配置 ====================
# OpenAI API配置
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# Anthropic API配置
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# 百度文心一言API配置
BAIDU_API_KEY=your-baidu-api-key
BAIDU_SECRET_KEY=your-baidu-secret-key

# 阿里云通义千问API配置
ALIBABA_API_KEY=your-alibaba-api-key

# ==================== 对象存储配置 ====================
# MinIO配置
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=localhost:9000
MINIO_BUCKET=taishanglaojun

# AWS S3配置 (可选)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET=your-s3-bucket

# ==================== 搜索服务配置 ====================
# Elasticsearch配置
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=

# Qdrant向量数据库配置
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# ==================== 消息队列配置 ====================
# RabbitMQ配置
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_URL=amqp://admin:admin123@localhost:5672/

# ==================== 邮件服务配置 ====================
# SMTP配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@taishanglaojun.com

# ==================== 监控配置 ====================
# Prometheus配置
PROMETHEUS_URL=http://localhost:9090

# Grafana配置
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123
GRAFANA_URL=http://localhost:3001

# Jaeger链路追踪配置
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# ==================== 第三方服务配置 ====================
# 微信小程序配置
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret

# 支付宝小程序配置
ALIPAY_APP_ID=your-alipay-app-id
ALIPAY_PRIVATE_KEY=your-alipay-private-key

# 短信服务配置
SMS_ACCESS_KEY=your-sms-access-key
SMS_SECRET_KEY=your-sms-secret-key
SMS_SIGN_NAME=太上老君AI

# ==================== CDN配置 ====================
# CDN域名
CDN_DOMAIN=https://cdn.taishanglaojun.com

# 静态资源域名
STATIC_DOMAIN=https://static.taishanglaojun.com

# ==================== 安全配置 ====================
# CORS允许的域名
CORS_ORIGINS=http://localhost:3000,https://taishanglaojun.com

# 速率限制配置
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# IP白名单 (逗号分隔)
IP_WHITELIST=127.0.0.1,::1

# ==================== 功能开关 ====================
# 启用功能标志
FEATURE_CHAT_ENABLED=true
FEATURE_IMAGE_GENERATION_ENABLED=true
FEATURE_DOCUMENT_ANALYSIS_ENABLED=true
FEATURE_DATA_ANALYSIS_ENABLED=true
FEATURE_VOICE_ENABLED=true
FEATURE_MULTIMODAL_ENABLED=true

# 调试模式
DEBUG_MODE=true
ENABLE_PROFILING=false

# ==================== 性能配置 ====================
# 服务器配置
HTTP_PORT=8080
GRPC_PORT=9090
MAX_REQUEST_SIZE=10MB
REQUEST_TIMEOUT=30s

# 数据库连接池配置
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis连接池配置
REDIS_MAX_IDLE=10
REDIS_MAX_ACTIVE=100
REDIS_IDLE_TIMEOUT=240s

# ==================== 日志配置 ====================
# 日志级别: debug, info, warn, error
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# 日志文件配置
LOG_FILE_ENABLED=false
LOG_FILE_PATH=./logs/app.log
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_MAX_BACKUPS=10
LOG_FILE_MAX_AGE=30

# ==================== 备份配置 ====================
# 数据库备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# ==================== 开发工具配置 ====================
# 热重载配置
HOT_RELOAD_ENABLED=true
WATCH_EXTENSIONS=.go,.js,.ts,.tsx,.css,.scss

# API文档配置
SWAGGER_ENABLED=true
SWAGGER_HOST=localhost:8080
SWAGGER_BASE_PATH=/api/v1

# ==================== 测试配置 ====================
# 测试数据库
TEST_DATABASE_URL=postgres://postgres:password@localhost:5432/taishanglaojun_test?sslmode=disable

# 测试Redis
TEST_REDIS_URL=redis://localhost:6379/1

# 测试模式
TEST_MODE=false
MOCK_AI_RESPONSES=false