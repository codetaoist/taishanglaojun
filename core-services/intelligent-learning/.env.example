# 智能学习系统环境变量配置文件
# 复制此文件为 .env 并根据实际环境修改配置

# 应用配置
APP_NAME=intelligent-learning
APP_VERSION=1.0.0
APP_ENV=development
APP_DEBUG=true

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=60s

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=intelligent_learning
DB_USER=postgres
DB_PASSWORD=postgres123
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300s

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5

# Elasticsearch 配置
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=intelligent_learning

# Neo4j 配置
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=neo4j123
NEO4J_MAX_CONNECTION_POOL_SIZE=50

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=/var/log/intelligent-learning/app.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=28

# JWT 认证配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=168h
JWT_ISSUER=intelligent-learning-system

# AI 服务配置
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# 推荐系统配置
RECOMMENDATION_ALGORITHM=collaborative_filtering
RECOMMENDATION_CACHE_TTL=3600
RECOMMENDATION_BATCH_SIZE=100

# 学习路径配置
LEARNING_PATH_ALGORITHM=shortest_path
LEARNING_PATH_MAX_DEPTH=10
LEARNING_PATH_CACHE_TTL=1800

# 缓存配置
CACHE_DEFAULT_TTL=3600
CACHE_LEARNER_TTL=1800
CACHE_CONTENT_TTL=7200
CACHE_KNOWLEDGE_GRAPH_TTL=3600

# 监控配置
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30s
PERFORMANCE_MONITORING=true

# 限流配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# 文件上传配置
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,video/mp4,application/pdf
UPLOAD_PATH=/uploads

# 邮件配置 (可选)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@intelligent-learning.com

# 外部服务配置
EXTERNAL_API_TIMEOUT=30s
EXTERNAL_API_RETRY_COUNT=3
EXTERNAL_API_RETRY_DELAY=1s

# 安全配置
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_ALLOW_CREDENTIALS=true

# 开发工具配置
SWAGGER_ENABLED=true
PPROF_ENABLED=false
DEBUG_ROUTES=false

# 生产环境配置 (仅在生产环境使用)
# GIN_MODE=release
# LOG_LEVEL=warn
# APP_DEBUG=false
# SWAGGER_ENABLED=false