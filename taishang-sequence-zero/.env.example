# 太上老君序列0 - 环境变量配置示例
# 复制此文件为 .env 并根据实际环境修改配置

# ===========================================
# 数据库配置
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=taishang
DB_PASSWORD=taishang123
DB_NAME=taishang_sequence_zero
DB_SSLMODE=disable

# ===========================================
# Redis 配置
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# Neo4j 配置
# ===========================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j123

# ===========================================
# 服务端口配置
# ===========================================
# 认证服务端口
AUTH_SERVICE_PORT=8080

# 权限服务端口
PERMISSION_SERVICE_PORT=8081

# 意识服务端口
CONSCIOUSNESS_SERVICE_PORT=8082

# 文化智慧服务端口
CULTURAL_WISDOM_SERVICE_PORT=8083

# ===========================================
# JWT 配置
# ===========================================
# JWT密钥 (生产环境请使用强密钥)
JWT_SECRET=taishang-laojun-sequence-zero-jwt-secret-key-change-in-production

# 访问令牌有效期 (分钟)
JWT_ACCESS_TOKEN_EXPIRE=15

# 刷新令牌有效期 (天)
JWT_REFRESH_TOKEN_EXPIRE=7

# ===========================================
# 日志配置
# ===========================================
# 日志级别: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# 日志格式: json, text
LOG_FORMAT=json

# 日志文件路径
LOG_FILE_PATH=./logs/taishang.log

# ===========================================
# 监控配置
# ===========================================
# Prometheus 端口
PROMETHEUS_PORT=9090

# Grafana 端口
GRAFANA_PORT=3000

# Grafana 管理员密码
GRAFANA_ADMIN_PASSWORD=admin123

# ===========================================
# 安全配置
# ===========================================
# CORS 允许的源
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# API 请求频率限制 (每分钟)
RATE_LIMIT_PER_MINUTE=100

# 密码最小长度
PASSWORD_MIN_LENGTH=8

# 会话超时时间 (分钟)
SESSION_TIMEOUT=30

# ===========================================
# AI 服务配置
# ===========================================
# OpenAI API Key (如果使用)
OPENAI_API_KEY=your-openai-api-key-here

# 文化智慧模型配置
CULTURAL_WISDOM_MODEL=gpt-3.5-turbo

# 意识分析模型配置
CONSCIOUSNESS_ANALYSIS_MODEL=gpt-4

# ===========================================
# 文件存储配置
# ===========================================
# 文件上传目录
UPLOAD_DIR=./uploads

# 最大文件大小 (MB)
MAX_FILE_SIZE=10

# 允许的文件类型
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,txt,doc,docx

# ===========================================
# 邮件配置 (用于通知)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@taishang.dev

# ===========================================
# 缓存配置
# ===========================================
# 缓存过期时间 (秒)
CACHE_DEFAULT_EXPIRE=3600

# 权限缓存过期时间 (秒)
PERMISSION_CACHE_EXPIRE=1800

# 用户信息缓存过期时间 (秒)
USER_CACHE_EXPIRE=900

# ===========================================
# 开发环境配置
# ===========================================
# 环境类型: development, staging, production
ENVIRONMENT=development

# 是否启用调试模式
DEBUG=true

# 是否启用API文档
ENABLE_SWAGGER=true

# 是否启用性能分析
ENABLE_PROFILING=false

# ===========================================
# 高级配置
# ===========================================
# 数据库连接池大小
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300

# HTTP 服务器配置
HTTP_READ_TIMEOUT=30
HTTP_WRITE_TIMEOUT=30
HTTP_IDLE_TIMEOUT=120

# 优雅关闭超时时间 (秒)
GRACEFUL_SHUTDOWN_TIMEOUT=30